<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/llSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center">

        <EditText
            android:id="@+id/etSuEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="202dp"
            android:hint="Email"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/etSuPassword"
            android:layout_width="250dp"
            android:hint="Password"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="341dp" />

        <EditText
            android:id="@+id/etSuVerifyPassword"
            android:layout_width="250dp"
            android:hint="Verify Password"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="341dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Sign in here"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/llSignIn">


        <EditText
            android:id="@+id/etLiEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="202dp"
            android:hint="Email"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/etLiPassword"
            android:layout_width="250dp"
            android:hint="Password"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="341dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/tvSignUp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not registered? Sign up here"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLoggedInScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#272935"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tvLiLoggedInAs"
            android:paddingTop="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logged in as"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <TextView
            android:paddingTop="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to go to store's deal"
            android:textSize="50dp"
            android:textColor="@android:color/secondary_text_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" />


        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/losAmigosButton"
            android:padding="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Los Amigos"
            android:textSize="35dp"
            android:textColor="@android:color/secondary_text_dark"/>



        <!--//Wendy 5 copy this textView and paste it right below it.
        Then change "bobsBurgersButton" and "Bob's Burgers" (the id and text)
        -->
        <TextView
            android:id="@+id/bobsBurgersButton"
            android:padding="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Bob's Burgers"
            android:textSize="35dp"
            android:textColor="@android:color/secondary_text_dark"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" />





    </LinearLayout>


</LinearLayout>